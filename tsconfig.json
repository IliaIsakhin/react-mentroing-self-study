{
  "compilerOptions":{
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "lib": ["es6", "dom"],
    "baseUrl": "./src/components",
    "sourceMap": true,
    "outDir": "./dist/ts",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": [
    "typePatches"
  ]
}